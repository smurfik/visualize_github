<% if current_user %>
  <div class="hi">
    <nav>
      <%= link_to "Sign Out", sign_out_path, class: "btn" %>
      <%= link_to "My Github Page", "https://github.com/#{current_user.username}", class: "github-link", target: "blank", class: "btn" %>
    </nav>
    <h1>Hello <%= current_user.username.capitalize %>! It's nice to see you!</h1>
    <%= image_tag "#{current_user.avatar_url}", class: "logo" %>
    <div class="info">
      <div><a href="personalsite">Personal Site</a></div>
      <div>Location: <span class="location"></span></div>
      <div>Following: <span class="following"></span></div>
      <div>Followers: <span class="followers"></span></div>
      <div># of repos: <span class="repos"></span></div>
      <div># of gists: <span class="gists"></span></div>
    </div>
    <div class="divider"></div>
    <div id="chart-container"></div>
    <div id="chart-container-activity"></div>
  </div>
<% else %>
  <header>
    <%= link_to "Sign in with github", "/auth/github", class: "btn" %>
  </header>
<% end %>
